<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd">
<sqlMap namespace="App">


  
    <insert id="insertVend" parameterClass="Map">
    	/*App.insertVend*/
    	INSERT INTO MNG_VEND_TB
    	(
    		VEND_NAME
    		,VEND_DIV
    		,VEND_REP
    		,VEND_NUM
    		,VEND_CONDITION
    		,VEND_JONGMOK
    		,VEND_ADDR
    		,VEND_PHONE_NUM
    		,VEND_FAX_NUM
    		,VEND_MAIL_ADDR
    	)
    	VALUES
    	(
    		'$VEND_NAME$'
    		,'$VEND_DIV$'
    		,'$VEND_REP$'
    		,'$VEND_NUM$'
    		,'$VEND_CONDITION$'
    		,'$VEND_JONGMOK$'
    		,'$VEND_ADDR$'
    		,'$VEND_PHONE_NUM$'
    		,'$VEND_FAX_NUM$'
    		,'$VEND_MAIL_ADDR$'
    	)
    	
    </insert>
    
    <select id="selectVendList"  resultClass="HashMap">
    	SELECT
    		*
    	FROM
    		MNG_VEND_TB
    	ORDER BY VEND_NUM
    </select>
    
    
    <insert id="insertMaterial" parameterClass="Map">
    	/*App.insertMaterial*/
    	INSERT INTO MNG_MATERIAL_TB
    	(
    		MODEL
    		,ITEM_NUMBER
    		,ITEM_NAME
    		,QUALITY_MATERIAL
    		,HEAT_TREATMENT_HARDNESS
    		,REMARKS
    		,VEND_SEQ
    	)
    	VALUES
    	(
    		'$model$'
    		,'$itemNumber$'
    		,'$itemName$'
    		,'$qualityMaterial$'
    		,'$heatTreatmentHardness$'
    		,'$remarks$'
    		,'$vendSeq$'
    	)
    	
    </insert>
</sqlMap>